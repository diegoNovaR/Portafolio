@{
    var proyectos = Model.ToList(); // Para evitar múltiples enumeraciones
}

@model IEnumerable<ProyectoDTO>

@if(Model is not null)
{
    <div class="container align-items-center text-center">
        <h1 class="titulo">Mis Proyectos Personales</h1>
        <p style="color: cornflowerblue; font-size:1.2rem;">aqui puedes ver mis proyectos personales mas recientes</p>
    </div>

    <div class="container mb-5 align-content-center">
        <div id="carousel" class="carousel slide" data-bs-ride="carousel">

            <!-- Indicadores -->
            <div class="carousel-indicators">
                @for (int i = 0; i < proyectos.Count; i++)
                {
                    <button type="button"
                            data-bs-target="#carousel"
                            data-bs-slide-to="@i"
                            class="@(i == 0 ? "active" : "")"
                            aria-current="@(i == 0 ? "true" : null)"
                            aria-label="Slide @(i + 1)">
                    </button>
                }
            </div>

            <!-- Slides -->
            <div class="carousel-inner m-1" style="padding:1em;">
                @for (int i = 0; i < proyectos.Count; i++)
                {
                    var p = proyectos[i];
                    <div class="carousel-item @(i == 0 ? "active" : "") my-5 ">
                        <div class="card mx-auto mb-1 w-50 border-secondary border-2" style="background-color:cornflowerblue;">
                            
                            <div class="card-header text-center mb-2">
                                <h2 class="titulo2 mb-3 cardte m-auto">@p.Titulo</h2>
                            </div>

                            <div class="card-body text-center px-0 p-0">
                                <div class="card-img mb-3">
                                    <img src="@p.ImagenURL" class="d-block m-auto card-img" alt="Imagen Proyecto" />
                                </div>
                                
                                <p class="card-text m-0 p-2">@p.DescripcionCorta</p>
                                <a class="bi bi-github btn m-0" href="@p.UrlGit" target="_blank" rel="noopener noreferrer "></a>
                            </div>

                            <div class="card-footer row px-5">

                                <div class="text-center">
                                    <a class="btn w-50" style="background-color:black; color:whitesmoke" asp-controller="Home" asp-action="Proyectos" >Ver Proyectos</a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <!-- Controles -->
            <button class="carousel-control-prev " type="button" data-bs-target="#carousel" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Anterior</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carousel" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Siguiente</span>
            </button>
        </div>
    </div>

    
}


